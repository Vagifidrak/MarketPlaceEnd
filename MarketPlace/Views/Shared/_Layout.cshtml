    <!-- User Register Modal -->
    <div class="modal account-modal fade multi-step" id="user-register" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header p-0 border-0">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="login-header">
                        <h3>İstifadəçi olaraq buyurun</h3>
                    </div>

                    <!-- Register Form -->
                    <form action="https://truelysell-html.dreamguystech.com/template/index.html">
                        <div class="form-group form-focus">
                            <label class="focus-label">Ad</label>
                            <input type="text" class="form-control" placeholder="vagifibra@gmail.com">
                        </div>
                        <div class="form-group form-focus">
                            <label class="focus-label">Mobil nömrə</label>
                            <input type="text" class="form-control" placeholder="+995 55 321 00 07">
                        </div>
                        <div class="form-group form-focus">
                            <label class="focus-label">Şifrə Yarat</label>
                            <input type="password" class="form-control" placeholder="********">
                        </div>
                        <div class="text-right">
                            <a class="forgot-link" href="#">
                                Artıq bir hesabınız var mı?
                            </a>
                        </div>
                        <button class="btn btn-primary btn-block btn-lg login-btn" type="submit">
                            Abunə olun
                        </button>
                        <div class="login-or">
                            <span class="or-line"></span>
                            <span class="span-or">or</span>
                        </div>
                        <div class="row form-row social-login">
                            <div class="col-6">
                                <a href="#" class="btn btn-facebook btn-block">
                                    <i class="fab fa-facebook-f mr-1"></i> Daxil ol
                                </a>
                            </div>
                            <div class="col-6">
                                <a href="#" class="btn btn-google btn-block">
                                    <i class="fab fa-google mr-1"></i> Daxil ol
                                </a>
                            </div>
                        </div>
                    </form>
                    <!-- /Register Form -->

                </div>
            </div>
        </div>
    </div>
    <!-- /User Register Modal -->
    <!-- Login Modal -->
    <div class="modal account-modal fade" id="login_modal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header p-0 border-0">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
